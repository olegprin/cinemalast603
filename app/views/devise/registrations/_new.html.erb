  <button id="loginbutton" type="button" class="btn btn-success navbar-btn" data-toggle="modal" data-target="#registration">
                    <i class="glyphicon glyphicon-link">
                    </i>Registration
                  </button>

                  <div class="modal fade" id="registration" role="dialog">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;
                          </button>
                          <h4 class="modal-title">Registration
                          </h4>
                        </div>
                      <div class="modal-body">
                        <p>
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                              <%#= devise_error_messages! %>
                            <div class="form-group">
                              <label class="control-label col-sm-2" for="email">
                                <div class="text">Email:
                                </div>
                              </label>
                              <div class="col-sm-10">
                                <%= f.email_field :email, autofocus: true %>
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="control-label col-sm-2" for="pwd">
                              <div class="text">Password:
                                </div>
                              </label>
                              <div class="col-sm-10">
                                <% if @minimum_password_length %>
                                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                                  <% end %>
                                <%= f.password_field :password, autocomplete: "off" %>
                              </div>
                              <label class="control-label col-sm-2" for="pwd">
                              <div class="text">Confirmation:
                              </div>
                              </label>
                              </label>
                              <div class="col-sm-10">  
                                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-sm-offset-2 col-sm-10">
          
                              </div>
                            </div>
                            <div class="form-group">
                           
                                <%= f.button "Sign up", data: {disable_with: "<i class='fa fa-cog fa-spin'></i> Sign up..."}  %>
                        
                            </div>
                          <% end %>
                        </p>
                      </div>
                    <div class="modal-">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close
                      </button>
                    </div>
                  </div>