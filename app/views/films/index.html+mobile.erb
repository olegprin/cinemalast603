

<%= title "Database" %>

<h1>Listing Films</h1>
<% if @films.total_pages>1%>
<div class="pagination_box"> <%= will_paginate @films %></div>
<% end %>
<table>
 


    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>

   		<td><%= link_to image_tag(attachment_url(film, :image, :fill, 300, 300, format: "jpg")), film %></td>
          <td><%= link_to 'Show', film %></td>
      <% if signed_in? %>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>

      </tr>
    
      
    <% end %>
</table>
       
<br>

<% if @films.total_pages >1 %>
<div class="pagination_box"> <%= will_paginate @films %></div>
<% end %>